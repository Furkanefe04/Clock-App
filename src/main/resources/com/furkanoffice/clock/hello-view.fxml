<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" minHeight="600" minWidth="1000" spacing="10" styleClass="main" stylesheets="@generalStyle.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.furkanoffice.clock.HelloController">
    <HBox alignment="CENTER_LEFT" styleClass="title-bar">
        <HBox alignment="CENTER_LEFT" spacing="10" styleClass="title-section">
            <Label styleClass="app-title" text="⏰" />
            <Label styleClass="app-title" text="Clock App" />
        </HBox>

        <Region HBox.hgrow="ALWAYS" />

        <HBox alignment="CENTER_RIGHT" styleClass="window-controls">
            <Button onAction="#minimizeWindow" styleClass="casual-button,window-button, minimize-button" text="➖" />
            <Button onAction="#closeWindow" styleClass="casual-button,window-button, close-button" text="❌" />
        </HBox>
      <VBox.margin>
         <Insets />
      </VBox.margin>
    </HBox>
    <TabPane fx:id="tabPane" styleClass="tab-pane" tabClosingPolicy="UNAVAILABLE">
        <Tab styleClass="tab" text="⏱ Kronometre">
            <VBox alignment="CENTER" spacing="5" styleClass="tab-content">
                <HBox alignment="CENTER">
                    <StackPane>
                        <Label fx:id="timeLabelHour" styleClass="choronometreLabel" text="00" />
                    </StackPane>
                    <Label styleClass="choronometreLabel" text=":" />
                    <StackPane>
                        <Label fx:id="timeLabelMinute" styleClass="choronometreLabel" text="00" />
                    </StackPane>
                    <Label styleClass="choronometreLabel" text=":" />
                    <StackPane>
                        <Label fx:id="timeLabelSecond" styleClass="choronometreLabel" text="00" />
                    </StackPane>
                    <Label styleClass="choronometreLabel" text=":" />
                    <StackPane>
                        <Label fx:id="timeLabelMS" styleClass="choronometreLabel" text="00" />
                    </StackPane>
                    <VBox.margin>
                        <Insets top="-50.0" />
                    </VBox.margin>
                </HBox>
                <HBox alignment="CENTER" spacing="10">
                    <Button fx:id="startChoronometre" onAction="#startChoronometre" styleClass="casual-button" text="Başlat" />
                    <Button fx:id="stopChoronometre" onAction="#stopTimer" styleClass="casual-button" text="Durdur" />
                    <Button fx:id="resetChoronometre" onAction="#resetTimer" styleClass="casual-button" text="Sıfırla" />
                </HBox>

                <ListView fx:id="turlar" maxHeight="200" maxWidth="400" prefHeight="200" prefWidth="400" />

                <Button fx:id="kaydet" maxWidth="400" onAction="#kaydet" styleClass="casual-button" text="Kaydet" />

                <padding>
                    <Insets bottom="20" left="20" right="20" top="20" />
                </padding>
            </VBox>
        </Tab>

        <Tab styleClass="tab" text="🕐 Saat">
            <VBox alignment="CENTER" styleClass="tab-content">
                <HBox>
                    <Label fx:id="bolgeLogo" style="-fx-text-fill: red" styleClass="bolgeLabel" text="📍 ">
                        <HBox.margin>
                            <Insets />
                        </HBox.margin>
                    </Label>
                    <Label fx:id="bolgeText" prefWidth="223.0" styleClass="bolgeLabel" text="İstanbul">
                        <HBox.margin>
                            <Insets />
                        </HBox.margin>
                    </Label>
                    <VBox.margin>
                        <Insets top="-20.0" />
                    </VBox.margin>
                </HBox>
                <Label fx:id="clockLabel" alignment="CENTER" prefWidth="400.0" styleClass="clockLabel" text="12:50:40">
                    <VBox.margin>
                        <Insets top="-30.0" />
                    </VBox.margin>
                </Label>
                <Label fx:id="dateLabel" alignment="CENTER" styleClass="dateLabel" text="20.09.2025 Cumartesi">
                    <VBox.margin>
                        <Insets top="-10.0" />
                    </VBox.margin>
                </Label>
                <Label fx:id="saatdilimleri" alignment="CENTER" styleClass="dunyasaatleri" text="Dünya saatleri">
                    <VBox.margin>
                        <Insets />
                    </VBox.margin>
                </Label>
                <ListView fx:id="saatler" maxHeight="200" maxWidth="400" prefHeight="200" prefWidth="400"/>
                <padding>
                    <Insets bottom="40" left="20" right="20" top="40" />
                </padding>
            </VBox>
        </Tab>
        <Tab styleClass="tab" text="⏳ Zamanlayıcı">
            <VBox alignment="CENTER" spacing="10" styleClass="tab-content">
                <HBox alignment="CENTER" spacing="5">
                    <StackPane>
                        <TextField fx:id="timerHour" alignment="CENTER" maxWidth="60" promptText="00" />
                    </StackPane>
                    <Label styleClass="choronometreLabel" text=":" />
                    <StackPane>
                        <TextField fx:id="timerMinute" alignment="CENTER" maxWidth="60" promptText="00" />
                    </StackPane>
                    <Label styleClass="choronometreLabel" text=":" />
                    <StackPane>
                        <TextField fx:id="timerSecond" alignment="CENTER" maxWidth="60" promptText="00" />
                    </StackPane>
                </HBox>
                <HBox alignment="CENTER">
                    <StackPane>
                        <Label fx:id="timerLabelhour" styleClass="choronometreLabel" text="00">
                            <VBox.margin>
                                <Insets top="10.0" />
                            </VBox.margin>
                        </Label>
                    </StackPane>
                    <StackPane>
                        <Label styleClass="choronometreLabel" text=":">
                            <VBox.margin>
                                <Insets top="10.0" />
                            </VBox.margin>
                        </Label>
                    </StackPane>
                    <StackPane>
                        <Label fx:id="timerLabelminute" styleClass="choronometreLabel" text="00">
                            <VBox.margin>
                                <Insets top="10.0" />
                            </VBox.margin>
                        </Label>
                    </StackPane>
                    <StackPane>
                        <Label styleClass="choronometreLabel" text=":">
                            <VBox.margin>
                                <Insets top="10.0" />
                            </VBox.margin>
                        </Label>
                    </StackPane>
                    <StackPane>
                        <Label fx:id="timerLabelsecond" styleClass="choronometreLabel" text="00">
                            <VBox.margin>
                                <Insets top="10.0" />
                            </VBox.margin>
                        </Label>
                    </StackPane>
                    <StackPane>
                        <Label styleClass="choronometreLabel" text=":">
                            <VBox.margin>
                                <Insets top="10.0" />
                            </VBox.margin>
                        </Label>
                    </StackPane>
                    <StackPane>
                        <Label fx:id="timerLabelmillisecond" styleClass="choronometreLabel" text="00">
                            <VBox.margin>
                                <Insets top="10.0" />
                            </VBox.margin>
                        </Label>
                    </StackPane>
                </HBox>

                <HBox alignment="CENTER" spacing="10">
                    <Button fx:id="startTimer" onAction="#startCountdown" styleClass="button" text="Başlat" />
                    <Button onAction="#pauseCountdown" styleClass="button" text="Duraklat" />
                    <Button onAction="#resetCountdown" styleClass="button" text="Sıfırla" />
                </HBox>

                <padding>
                    <Insets bottom="20" left="20" right="20" top="20" />
                </padding>
            </VBox>
        </Tab>


    </TabPane>

    <StackPane styleClass="message-area">
        <Label fx:id="message" alignment="CENTER" styleClass="toast" />
    </StackPane>

</VBox>
